/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here:
    // CÃ³digo completado por @.cronin
    Not(in=sel, out=p01);
    And(a=a, b=p01, out=out01);
    And(a=b, b=sel, out=out02);
    Or(a=out01, b=out02, out=out);
}